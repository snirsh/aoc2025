{
  "compilerOptions": {
    "checkJs": true,
    "module": "ESNext",
    "target": "ES2020",
    "lib": ["ES2020"],
    "noEmit": true,
    "strict": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "moduleResolution": "NodeNext",
    "baseUrl": ".",
    "paths": {
      "*": ["./*"]
    },
    "typeRoots": ["./node_modules/@types", "./"]
  },
  "include": ["**/*", "types.d.ts"],
  "exclude": ["node_modules", "dist", "build"]
}
